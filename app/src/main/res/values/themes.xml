<resources>
    <!-- Base application theme. -->
    <style name="Theme.GithubUser" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_600</item>
        <item name="colorPrimaryVariant">@color/dark_600</item>
        <item name="colorOnPrimary">@color/light_200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/dark_600</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/light_100</item>
        <item name="android:windowAnimationStyle">@null</item>

        <item name="colorBgButton">@color/light_300</item>
        <item name="colorBgDetail">@color/light_100</item>

    </style>

    <style name="Theme.GithubUser.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>